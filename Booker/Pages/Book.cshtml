@page "{id:int}"
@model Booker.Pages.BookModel

@{
    ViewData["Title"] = @Model.BookItem?.Book?.Title ?? "Szczegóły książki";
}

<article class="book-display">
    <section class="image">
        <img src="@Model.BookItem?.Photo ?? " https: //via.placeholder.com/300x400"" alt="Zdjęcie książki" />
    </section>
    <section class="data">
        <h2>@(Model.BookItem?.Book?.Title ?? "Nieznany tytuł")</h2>
        <p><small>Dodane: @(Model.BookItem?.DateTime.ToString("d MMMM yyyy 'o' HH:mm") ?? "Brak daty")</small></p>
        <p><strong>@(Model.BookItem?.Price.ToString("C") ?? "Brak ceny")</strong></p>
        <ul>
            <li>Klasa: @($"Klasa {Model.BookItem?.Book?.Grade ?? "nieznana"}")</li>
            <li>Przedmiot: @(Model.BookItem?.Book?.Subject ?? "Nieznany przedmiot")</li>
            <li>Zakres: @(Model.BookItem?.Book?.Level == true ? "podstawowy" : "rozszerzony")</li>
            <li>Stan: @(Model.BookItem?.State ?? "Nieznany stan")</li>
        </ul>
    </section>
    <section class="actions">
        <button>Dodaj do ulubionych</button>
        <button>Zapytaj o przedmiot</button>
    </section>
    <section class="description">
        <h3>Opis</h3>
        <p>
            @(Model.BookItem?.Description ?? "Brak opisu")
        </p>
    </section>
    <section class="seller">
        <h3>Sprzedaje</h3>
        <div>
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Profil sprzedającego" />
            <div>
                @(Model.BookItem?.User?.Nickname ?? "Nieznany użytkownik")<br />
                @(Model.BookItem?.User?.School ?? "Nieznana szkoła")<br />
                Telefon: 123456789<br />
                <a href="#" role="button" class="outline">Więcej od tego użytkownika</a>
            </div>
        </div>
    </section>
</article>