    <title>@ViewData["Title"] - ŚlTZN Books</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", false)
    <script src="~/js/htmx.min.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="container-fluid">
        <ul>
            <li>
                <strong>
                    <a asp-area="" asp-page="/Index">Booker</a>
                </strong>
            </li>
        </ul>
        <ul>
            <li>
                <a asp-area="" asp-page="/Index">Strona główna</a>
            </li>
            <li>
                <a role="button" class="outline" href="#">Zaloguj się</a>
